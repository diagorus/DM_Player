<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >
    <TextView
        android:id="@+id/textViewAdvancedSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:text="Advanced Settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
        android:textColor="?attr/colorAccent"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/relativeLayoutChooseTheme"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/imageViewPhone3"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="-6dp"
            android:src="@drawable/ic_hardware_phone_android_3"
            android:tint="?attr/colorAccent" />

        <ImageView
            android:id="@+id/imageViewPhone2"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="-6dp"
            android:src="@drawable/ic_hardware_phone_android_2"
            android:tint="?attr/colorPrimary" />

        <ImageView
            android:id="@+id/imageViewPhone"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="-6dp"
            android:src="@drawable/ic_hardware_phone_android"
            android:tint="?attr/colorAccent" />

        <LinearLayout
            android:id="@+id/linLayoutThemeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="64dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Choose App Theme"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textColor="@color/md_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewThemeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Press to change the primary, primary dark and accent colors"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textColor="@color/md_secondary_text_icons"
                android:textSize="14sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/dividerTheme"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/md_divider" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutCustomizeProfile"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/imageViewProfile1"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="-6dp"
            android:src="@drawable/ic_settings_profile_1"
            android:tint="?attr/colorAccent"/>

        <ImageView
            android:id="@+id/imageViewProfile2"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="-6dp"
            android:src="@drawable/ic_settings_profile_2"
            android:tint="?attr/colorPrimary" />

        <LinearLayout
            android:id="@+id/linLayoutProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="64dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewProfileInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Customize your profile"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textColor="@color/md_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewProfileDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Press to change your avatar and name"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textColor="@color/md_secondary_text_icons"
                android:textSize="14sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/dividerProfile"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/md_divider" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutChangeHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/imageViewBackground2"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="-6dp"
            android:src="@drawable/ic_settings_background_2"
            android:tint="?attr/colorPrimary"/>

        <ImageView
            android:id="@+id/imageViewBackground1"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="-6dp"
            android:src="@drawable/ic_settings_background_1"
            android:tint="?attr/colorAccent" />

        <LinearLayout
            android:id="@+id/linLayoutHeaderBackgroundText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="64dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewHeaderBackgroundInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Choose header background"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textColor="@color/md_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewHeaderBackgroundDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Press to change header's background in the sliding pannel"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textColor="@color/md_secondary_text_icons"
                android:textSize="14sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/dividerHeaderBackground"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/md_divider" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutCreatePlaylist"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/linLayoutCreatePlaylistText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="64dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCreatePlaylistInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Create playlist"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textColor="@color/md_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewCreatePlaylistDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Tap to create playlist with a song"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textColor="@color/md_secondary_text_icons"
                android:textSize="14sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/dividerHeaderBackground"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/md_divider" />

    </RelativeLayout>
</LinearLayout>